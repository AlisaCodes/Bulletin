{{yield}}
<div class="panel-footer panel-warning">
  {{#if addNewAnswer}}
      <h3>Add New Answer</h3>
      <div class="container">
        <form>
          <div class="form-group">
            <label for="answerer">Your Name</label>
            {{input value=answerer id="answerer" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="response">Answer</label>
            {{input value=response id="response" class="form-control"}}
          </div>
          <button class="btn" {{action 'save'}}>Save</button>
        </form>
      </div>
  {{else}}
      <button class="btn btn-warning" {{action 'answerFormShow'}}>Add New Answer</button>
  {{/if}}
</div>
